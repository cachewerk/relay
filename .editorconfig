root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.md]
trim_trailing_whitespace = false

[*.{xml,yml,yaml,neon,json}]
indent_size = 2

[*.{xml,yml,yaml,neon,json}.dist]
indent_size = 2

[*.Dockerfile]
indent_size = 2
